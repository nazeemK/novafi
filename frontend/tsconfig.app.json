{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2016", "DOM", "DOM.Iterable"],
    "types": ["node", "vue"],
    "target": "ES2016",
    "module": "ES2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "verbatimModuleSyntax": true
  }
}
